            xmlns:views="clr-namespace:XamarinApp.Views"
            x:Class="XamarinApp.Views.MainPage">
    <TabbedPage.Children>
        <NavigationPage Title="Tasks">
            <x:Arguments>
                <views:TodoListPage />
            </x:Arguments>
        </NavigationPage>
        <NavigationPage Title="Stop Watch">
            <x:Arguments>
                <views:StopWatchPage />
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>